<div class="card m-3 bg-dark overflow-hidden">
  <div class="row card-header justify-content-between align-items-center text-light">
    <a href="{{#if active_dashboard}}/dashboard{{/if}}/post/{{id}}{{#if active_home}}/comments{{/if}}"
      class="text-light fs-4 text-decoration-none fw-bold">{{title}}</a>
    <p class="m-0">{{user.username}}</p>
  </div>
  <div class="card-body bg-light">
    <p class="card-text">{{content}}</p>
  </div>
  <div class="meta text-white">
    {{vote_count}} {{format_plural "Like" vote_count}}
    <svg class="bi bi-dot" width="1em" height="1em" viewBox="0 0 16 16" fill="white" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M8 9.5a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z" />
    </svg>
    {{!-- Comment Count --}}
    {{comments.length}} {{format_plural "Comment" comments.length}}
    <svg class="bi bi-dot" width="1em" height="1em" viewBox="0 0 16 16" fill="white" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M8 9.5a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z" />
    </svg>
    {{!-- Created Date --}}
    Posted on {{format_date created_at}}</a>
  </div>
</div>