<div class="card m-3 bg-dark overflow-hidden">
  <div class="row card-header justify-content-between align-items-center text-light">
    <a href="{{#if active_dashboard}}/dashboard{{/if}}/post/{{id}}{{#if active_home}}/comments{{/if}}"
      class="text-light fs-4 text-decoration-none fw-bold" name="{{image}}" id="image">{{title}}</a>

    <img src="https://res.cloudinary.com/dpzhkh1il/image/upload/v1667162004/some-folder-name/c914.png">
    {{!-- <img src="{{event.image}}" alt=""> --}}

    <p class="m-0">Posted by {{user.username}} on {{format_date created_at}}</p>
  </div>
  <div class="card-body bg-light">
    <p class="card-text">{{content}}</p>
    {{!-- <a href="{{#if content}}/dashboard{{/if}}" class="card-text"></a> --}}
  </div>
</div>