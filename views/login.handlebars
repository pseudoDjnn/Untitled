<div class="d-flex justify-content-center mt-5">
  <div
    class="col-10 col-sm-9 col-md-6 col-lg-5 col-xl-4 p-5 bg-light rounded shadow"
  >
    <form class="login-form">
      <!-- Email input -->
      <div class="form-outline mb-4">
        <input
          type="email"
          id="email-login"
          placeholder="Email address"
          class="form-control"
        />
      </div>

      <!-- Password input -->
      <div class="form-outline mb-4">
        <input
          type="password"
          id="password-login"
          placeholder="Password"
          class="form-control"
        />
      </div>
      <!-- Submit button -->
      <button type="submit" class="btn btn-dark col-12 mb-4">Sign in</button>

      <!-- Register buttons -->
      <div class="text-center">
        <p>Feel free to signup <a href="/register">here</a></p>
      </div>
    </form>
  </div>
</div>

<script src="/javascript/login.js"></script>