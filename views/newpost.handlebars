<section>
  <div class="text-light">
    <div class="text-light" style="background-color: aliceblue;">

      <div class="container">
        <div class="d-flex">
          <div class="col-md-12">
            <h1 class="fw-bold text-center" style="color: lightsteelblue;">Create New Post</h1>
          </div>
        </div>
      </div>
    </div>

    <nav class="navbar navbar-light" style="background-color: aliceblue;">
      <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link {{#if active_home}}active{{/if}}" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link {{#if active_dashboard}}active{{/if}}" href="/dashboard">Dashboard</a>
            </li>
          </ul>
          <div class="d-flex">
            {{#if loggedIn}}
            <a id="logout" class="text-dark btn btn-light px-3 py-1 rounded text-decoration-none fw-bold">Logout</a>
            {{else}}
            <a class="text-dark btn btn-light px-3 py-1 rounded text-decoration-none fw-bold" href="/login">Login</a>
            {{/if}}
          </div>
        </div>
      </div>
    </nav>

    <!-- form -->
    <section class="container">
      <form id="new-post-form" name="new-post-form" enctype="multipart/form-data" user-data="{{user_id}}">

        <div class="card mt-3 overflow-hidden">
          <div class="d-flex card-header justify-content-between align-items-center text-light">
            <h2>New Post</h2>
          </div>

          <div class="card-body" style="color: grey;">
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" class="form-control" id="title" name="title" />
            </div>

            <div class="form-group">
              <label for="image">Upload Photo</label>
              <input type="file" id="image" name="image" />
            </div>
            {{!-- <form action="/" method="POST" enctype="multipart/form-data"> --}}
              {{!-- </form> --}}

            {{!-- <form action="/" method="POST" encType="multipart/form-data">
              <h3>Upload Photo</h3>
              <input type="file" name="image" id="image" />
            </form> --}}

            <div class="form-group">
              <label for="body">Content</label>
              <textarea class="form-control" id="content" name="content" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-success mt-3">Create</button>
          </div>
        </div>
      </form>
    </section>
  </div>
</section>

<script src="/javascript/add-post.js"></script>